# Maintainer: Yusuke Sasaki <yusuke dot sasaki dot oss at gmail dot com>

_realname=libcerf
pkgbase="mingw-w64-${_realname}"
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.3
pkgrel=1
arch=('any')
url='http://botan.randombit.net/'
pkgdesc='Complex error functions, Dawson, Faddeeva, and Voigt function (mingw-w64)'
depends=()
makedepends=()
license=('MIT')
source=("http://downloads.sourceforge.net/project/libcerf/${_realname}-${pkgver}.tgz")
sha256sums=('d7059e923d3f370c89fb4d19ed4f827d381bc3f0e36da5595a04aeaaf3e6a859')

prepare() {
  cd "${srcdir}/${_realname}-${pkgver}"
  # patch -Np1 -i "${srcdir}/boost-link.patch"
}

build() {
  cd "${srcdir}/${_realname}-${pkgver}"
  ./configure \
    --prefix=${MINGW_PREFIX}
}

check() {
  cd "${srcdir}/${_realname}-${pkgver}"
  make check
}

package() {
  cd "${srcdir}/${_realname}-${pkgver}"
  make DESTDIR="$pkgdir" install
}

